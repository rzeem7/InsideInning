<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <layer-list>
      <item>
        <bitmap android:gravity="center" android:src="@drawable/selectedFemale"  />
      </item>
      <item>
        <shape>
          <solid android:color="#00000000" />
          <corners android:radius="0dp" />
          <stroke android:color="#FFF" android:width="1dp" />
        </shape>
      </item>
    </layer-list>
  </item>
  <item android:drawable="@drawable/selectedFemale" android:state_pressed="false"/>
  <item android:drawable="@drawable/selectedMale"></item>
</selector>